@app.template_filter('category_color')
def category_color(category):
    """Return color scheme for category badges"""
    colors = {
        'Sports': 'text-green-400',
        'Politics': 'text-orange-500',
        'Economics': 'text-blue-400',
        'Technology': 'text-purple-400',
        'Entertainment': 'text-pink-400',
        'Crypto': 'text-yellow-400',
        'Crime': 'text-red-400',
        'World': 'text-cyan-400',
        'Culture': 'text-indigo-400',
    }
    return colors.get(category, 'text-orange-500')
