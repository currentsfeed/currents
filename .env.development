# Development Environment Configuration
# Used on dev branch / local testing

# Environment
ENV=development
DEBUG=True

# Database
DATABASE_PATH=brain.db

# Domain
DOMAIN=localhost
BASE_URL=http://localhost:5555

# Brain Configuration
BRAIN_V1_ENABLED=True

# Rate Limiting (more lenient for testing)
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=DEBUG

# Flask
FLASK_ENV=development
FLASK_DEBUG=1

# Ngrok (used for dev tunneling)
USE_NGROK=True

# Coming Soon redirect (disabled)
COMING_SOON_REDIRECT=False
